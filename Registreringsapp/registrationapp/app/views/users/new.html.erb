<div class="row">
	<div class="large-12 columns">
		<h1>Register</h1>
	</div>
</div>

<% if flash[:register] %>
    <div class="row">
    	<div class="large-12 columns">
    		<div data-alert class="alert-box warning">
			  <%= flash[:register] %>
			  <a href="#" class="close">&times;</a>
			</div>
		</div>
	</div>
<% end %>

<%= form_for(@user) do |f| %>	
	<div class="row">
		<div class="large-12 columns">
			<div class="field">
			    <%= f.label :email %><br>
			    <%= f.text_field :email %>
		  	</div>
	  	</div>
		<div class="large-12 columns">
		  	<div class="field">
			    <%= f.label :password %><br>
			    <%= f.password_field :password %>
		  	</div>
		</div>
		<div class="large-12 columns">
		  	<div class="actions">
		    	<%= f.submit "Register", :class => "button expand" %>
		  	</div>	  	
	  	</div>
	</div>
<% end %>


<div class="row">
	<div class="large-12 columns">
		<%= link_to 'Back', login_path, {:class => "button secondary expand"} %>
	</div>
</div>


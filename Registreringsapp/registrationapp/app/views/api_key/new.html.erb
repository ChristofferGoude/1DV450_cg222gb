<div class="row">
	<div class="large-12 columns">
		<h1>New application</h1>
	</div>
</div>
<div class="row">
	<div class="large-12 columns">
		<p class="panel">Here you can create a new application and receive an API key.</p>
	</div>
</div>

<% if flash[:key] %>
    <div class="row">
    	<div class="large-12 columns">
    		<div data-alert class="alert-box warning">
			  <%= flash[:key] %>
			  <a href="#" class="close">&times;</a>
			</div>
		</div>
	</div>
<% end %>

<%= form_for(@api_key) do |f| %>	
	<div class="row">
		<div class="large-12 columns">
			<div class="field">
			    <%= f.label :app_name %><br>
			    <%= f.text_field :app_name %>
		  	</div>
	  	</div>
		<div class="large-12 columns">
		  	<div class="actions">
		    	<%= f.submit "Register new application", :class => "button expand" %>
		  	</div>	  	
	  	</div>
	</div>
<% end %>

<div class="row">
	<div class="large-12 columns">
		<%= link_to 'Log Out', logout_path, {:class => "button secondary expand"} %>
	</div>
</div>